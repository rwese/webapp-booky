# OAuth Configuration for NextAuth.js
# Copy this file to .env and fill in your credentials

# ===================
# NextAuth.js Secret
# ===================
# Generate with: npx auth secret
# Or use: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here-generate-with-openssl-rand-base64-32

# ===================
# OAuth Provider: Google
# ===================
# Get credentials at: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-google-client-secret

# ===================
# OAuth Provider: GitHub
# ===================
# Get credentials at: https://github.com/settings/developers
AUTH_GITHUB_ID=your-github-client-id
AUTH_GITHUB_SECRET=your-github-client-secret

# ===================
# OAuth Provider: Discord
# ===================
# Get credentials at: https://discord.com/developers/applications
AUTH_DISCORD_ID=your-discord-client-id
AUTH_DISCORD_SECRET=your-discord-client-secret

# ===================
# Application URLs
# ===================
# Base URL of your application
NEXTAUTH_URL=http://localhost:5173

# ===================
# Database Configuration
# ===================
# NextAuth.js requires a database for session storage
# Options: postgresql, mysql, mongodb, sqlite, etc.
# Example for development (using default):
# DATABASE_URL="file:./dev.db"

# ===================
# OAuth Provider Configuration
# ===================
# Enable/disable specific providers
AUTH_ENABLE_GOOGLE=true
AUTH_ENABLE_GITHUB=false
AUTH_ENABLE_DISCORD=false

# ===================
# Session Configuration
# ===================
# Session strategy: "jwt" or "database"
AUTH_SESSION_STRATEGY=jwt

# Session timeout (in seconds) - default: 30 days
AUTH_SESSION_MAX_AGE=2592000

# ===================
# Security Options
# ===================
# Trust proxy for production deployments behind reverse proxy
AUTH_TRUST_PROXY=false

# Enable/disable debug mode in development
AUTH_DEBUG=false

# ===================
# Custom Fields (Optional)
# ===================
# Add custom fields to user sessions
# AUTH_INCLUDE_CUSTOM_FIELDS=true

# ===================
# Error Tracking (Sentry)
# ===================
# Get DSN from: https://sentry.io/settings/<org>/projects/<project>/keys
# Leave empty to disable error tracking
VITE_SENTRY_DSN=

# Optional: Custom error reporting endpoint (alternative to Sentry)
# VITE_ERROR_ENDPOINT=https://your-api.com/errors
