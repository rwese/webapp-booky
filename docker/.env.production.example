# webapp-booky Production Environment Template
# Copy this file to .env and fill in the values

# Container Registry Configuration
CONTAINER_REGISTRY=ghcr.io
IMAGE_TAG=latest

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_PATH=/app/data/booky.db

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:20180

# Security Configuration
BCRYPT_ROUNDS=12

# Optional: Authentication (if using backend auth features)
# AUTH_SECRET=your-jwt-secret-key
# AUTH_JWT_EXPIRES_IN=24h
# AUTH_REFRESH_TOKEN_EXPIRES_IN=7d

# Optional: External Services
# SENTRY_DSN=https://xxx@sentry.io/xxx
